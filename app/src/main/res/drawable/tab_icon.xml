<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="ring" android:useLevel="false">

            <solid android:color= "@color/text_radio_normal" />
            <stroke android:color="@color/text_radio_normal"/>
            <size android:width= "20dip"
                android:height= "20dip" />

        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="ring" android:useLevel="false">

            <solid android:color= "@color/text_radio_checked" />
            <stroke android:color="@color/text_radio_checked"/>

            <size android:width= "20dip"
                android:height= "20dip" />

        </shape>
    </item>
</selector>