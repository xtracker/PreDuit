<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80dip"
    android:paddingTop="6dip"
    android:paddingBottom="6dip" android:background="@drawable/view_item_background" android:clickable="true">

    <ImageView android:id="@+id/imageThumbnail"
        android:layout_width="70dip"
        android:layout_height="70dip" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/itemName"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/article_title"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/itemCategory"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="right"
                android:textColor="@color/article_title"
                android:textSize="10sp" android:text="机器学习"/>
        </FrameLayout>

        <TextView android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/article_abstract"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="深度学习的概念源于人工神经网络的研究。含多隐层的多层感知器就是一种深度学习结构"/>

    </LinearLayout>

</LinearLayout>